<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true"><layer-list>
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/blanchedalmond" android:startColor="@color/moccasin" android:type="linear" />

                    <corners android:radius="4dip" />

                    <stroke android:width="0.5dip" android:color="@color/black" />

                    <size android:height="30dp" android:width="115dp" />
                </shape></item>
        </layer-list></item>

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false"><layer-list>
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/moccasin" android:startColor="@color/blanchedalmond" android:type="linear" />

                    <corners android:radius="4dip" />

                    <stroke android:width="2dip" android:color="@color/black" />

                    <size android:height="30dp" android:width="115dp" />
                </shape></item>
        </layer-list></item>

</selector>