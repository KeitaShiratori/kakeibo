<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true">
        <shape 
            xmlns:android="http://schemas.android.com/apk/res/android" 
            android:shape="rectangle">

            <solid android:color="@color/chocolate" />

            <stroke android:width="2dp" android:color="@color/tan" />

            <padding android:left="7dp" android:right="7dp" />

            <size android:height="40dp" android:width="230dp" />
        </shape>
    </item>

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/tomato" />

            <stroke android:width="2dp" android:color="@color/cornsilk" />

            <padding android:left="7dp" android:right="7dp" />

            <size android:height="40dp" android:width="230dp" />
        </shape></item>

</selector>