<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ボタンが押されたときの定義 -->
    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/blanchedalmond" android:startColor="@color/mistyrose" android:type="linear" />

            <stroke android:width="2dp" android:color="@color/aquamarine" />

            <padding android:bottom="3dp" android:left="7dp" android:right="7dp" android:top="3dp" />

            <size android:height="60dp" android:width="115dp" />
        </shape></item>

    <!-- ボタンが押されていないときの定義 -->
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/mistyrose" android:startColor="@color/blanchedalmond" android:type="linear" />

            <stroke android:width="2dp" android:color="@color/cornsilk" />

            <padding android:bottom="3dp" android:left="7dp" android:right="7dp" android:top="3dp" />

            <size android:height="60dp" android:width="115dp" />
        </shape></item>

</selector>